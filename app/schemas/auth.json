{
  "user_login": {
    "type": "object",
    "properties": {
      "email": {
        "type": "string",
        "format": "email",
        "pattern": "^[A-Za-z0-9\\._\\-]+@[A-Za-z0-9\\.-]+\\.[A-Za-z]{2,6}$",
        "messages": {
          "type": "Please enter a text value.",
          "pattern": "You entered your e-mail address in the wrong format.",
          "format": "You entered your e-mail address in the wrong format."
        }
      },
      "password": {
        "type": "string",
        "messages": {
          "type": "2000"
        }
      }
    },
    "required": [
      "email",
      "password"
    ]
  }
}